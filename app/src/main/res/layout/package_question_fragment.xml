<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#BACFBB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_namepackage1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/book"
        android:textColor="#EEEDF1"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_packagename1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/btn_namepackage1"
        android:text="Bộ Đề 1"
        android:textColor="#009688"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/btn_namepackage2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/book" />

    <TextView
        android:id="@+id/tv_package2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:text="Bộ Đề 2"
        android:textColor="#009688"
        android:textSize="15sp" />
    <ImageButton
        android:id="@+id/btn_namepackage3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/book"
        android:text="15"
        android:textColor="#EEEDF1"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_packagename3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@+id/btn_namepackage3"
        android:text="Bộ Đề 3"
        android:textColor="#009688"
        android:textSize="15sp" />
    <ImageButton
        android:id="@+id/btn_namepackage4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/book" />
    <TextView
        android:id="@+id/tv_package4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="160dp"
        android:layout_marginRight="40dp"
        android:text="Bộ Đề 4"
        android:textColor="#009688"
        android:textSize="15sp" />
    <ImageButton
        android:id="@+id/btn_namepackage5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/book"
        android:text="15"
        android:textColor="#EEEDF1"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_packagename5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="260dp"
        android:layout_toEndOf="@+id/btn_namepackage3"
        android:text="Bộ Đề 5"
        android:textColor="#009688"
        android:textSize="15sp" />
